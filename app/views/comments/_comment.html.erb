<div class="row" >
  <div class="col-md-2" >
    <p class="text-center">
      <%= image_tag( user_profile_image_url(comment.user) ) %><br>
      <small>
        <%= comment.user.name || comment.user.email if comment.user%>
      </small>
    </p> 
  </div>
  <div class="col-md-10" >
    <p><%= simple_format(markdown comment.body) if comment.body%></p>
    <p>
      <small>
        <% if comment.created_at %>
          submitted <%= time_ago_in_words(comment.created_at) %> ago
        <% end %>
        <% if policy(comment).destroy? %>
          | <%= link_to "Delete", [@post, comment], method: :delete %>
        <% end %>
      </small>
    </p> 
  </div>
</div>






